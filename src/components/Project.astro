---
import type { Project } from "../lib/projects"
import Tag from "./Tag.astro"

type Props = {
  project: Project
}

const { project: { repo: name, description, link, tags } } = Astro.props
---

<a class="max-w-30ch flex flex-col gap-6 justify-between border-2 border-gray-200 rounded-xl p-4 no-underline bg-gray-50 hover:bg-white transition-colors ease-in-out" href={link}>
  <div class="flex flex-col space-y-1">
    <span class="font-semibold text-gray-900">{name}</span>
    <span class="text-sm text-gray-600">{description}</span>
  </div>

  <div class="flex flex-row gap-2 flex-wrap-reverse">
    {tags.map(tag => <Tag {tag} isLink={false} />)}
  </div>
</a>