---
import { getCollection } from "astro:content";
import Base from "../../layouts/Base.astro";
import getUniqueTags from "../../lib/tags";
import Tag from "../../components/Tag.astro";
import { getProjects } from "../../lib/projects";

const posts = (await getCollection("blog")) ?? [];
const projects = (await getProjects()) ?? [];

let tags = getUniqueTags(posts, projects);

const title = "mateor â€¢ tags";
---

<Base {title} description="A list of all tags used on the site">
  <ul class="flex flex-row flex-wrap justify-center gap-3">
    {tags.map(tag => <Tag {tag} class="text-lg" />)}
  </ul>
</Base>
